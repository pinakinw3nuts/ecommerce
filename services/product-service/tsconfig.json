{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@utils/*": ["utils/*"],
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["../../../shared/*"]
    }
  },
  "include": ["src"]
} 