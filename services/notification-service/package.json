{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Email, SMS, and push notification service for e-commerce platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "cross-env USE_MOCK_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:clean": "npm run kill-ports && cross-env USE_MOCK_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:alt-port": "cross-env PORT=3030 USE_MOCK_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:high-port": "cross-env PORT=8080 USE_MOCK_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:random-port": "cross-env PORT=0 USE_MOCK_REDIS=true ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:auto-port": "cross-env USE_MOCK_REDIS=true node -e \"require('child_process').spawn('node', ['scripts/find-available-port.js'], {stdio: 'inherit'}).on('exit', () => require('child_process').spawn('ts-node-dev', ['--respawn', '--transpile-only', 'src/server.ts'], {stdio: 'inherit', env: {...process.env}}))\""
,
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:webhook": "ts-node src/scripts/test-webhook.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "retry:failed": "ts-node src/scripts/retry-failed-jobs.ts",
    "send:test-email": "ts-node src/scripts/send-test-email.ts",
    "check-env": "ts-node src/check-env.ts",
    "kill-ports": "node scripts/kill-ports-win.js",
    "kill-ports:unix": "node scripts/kill-ports.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/swagger": "^8.9.1",
    "@fastify/swagger-ui": "^1.9.3",
    "axios": "^1.5.0",
    "bullmq": "^4.9.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.22.2",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.5",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
