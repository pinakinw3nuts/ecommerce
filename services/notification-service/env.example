# Server Configuration
NODE_ENV=development
PORT=3015

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification_db

# Authentication
JWT_SECRET=your-secret-key-min-10-chars

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Redis Queue Configuration
REDIS_URL=redis://localhost:6379

# Notification Settings
EMAIL_FROM=notifications@example.com
NOTIFY_MODE=email  # Options: all, email, sms, none, log

# Email Service Providers (uncomment and configure as needed)
# SENDGRID_API_KEY=your-sendgrid-api-key
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain.com

# SMS Service Providers (uncomment and configure as needed)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890 