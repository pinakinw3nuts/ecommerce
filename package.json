{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "echo 'use service-level dev'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
    "check:ports": "node scripts/check-service-ports.js",
    "storage:sync": "node scripts/storage-sync.js",
    "storage:test": "node scripts/test-storage.js",
    "storage:service:install": "node scripts/install-service.js",
    "storage:service:uninstall": "node scripts/uninstall-service.js",
    "predev": "node scripts/storage-sync.js",
    "prebuild": "node scripts/storage-sync.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chokidar": "^3.6.0",
    "eslint": "^8.56.0",
    "node-windows": "^1.0.0-beta.8",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
